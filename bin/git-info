#!/usr/bin/env zsh

git rev-parse --git-dir > /dev/null || exit

__RESET='\033[m'
__GREEN='\033[32m'
__L_GREEN='\033[92m'
__BLUE='\033[34m'
__YELLOW='\033[33m'
__WHITE='\033[37m'
__RED='\033[31m'
__L_RED='\033[91m'
__UNDERLINE='\033[4m'
__BOLD='\033[1m'
__MILD='\033[2m'
__BACKGROUND='\033[7m'

echo "${__BACKGROUND}Origins${__RESET}"
for remote in `git remote -v | awk '{print $1}' | uniq`; do
    ([[ -z $__MAIN_REMOTE ]] || [[ $remote == 'origin' ]]) && __MAIN_REMOTE=$remote
  echo "  ${__UNDERLINE}${__BOLD}${__GREEN}${remote}${__RESET}"
  git remote -v | grep "^${remote}" | awk '{print "    "$3";"$2}' | column -s';' -t
done

echo "\n${__BACKGROUND}Branches${__RESET}"
for branch in `\git branch -v -a --sort=-committerdate | awk "/${__MAIN_REMOTE}/"'{print $1}' | sed "s|remotes/${__MAIN_REMOTE}/||g" | grep -v "HEAD"`; do
  if [[ `git shortlog -s -n --after="$(date -v-3m +%F)" "${__MAIN_REMOTE}/${branch}"` == "" ]]; then
    state="${__YELLOW}inactive${__RESET}"
  else
    state="${__GREEN}active${__RESET}"
  fi
  echo -n "  ${__UNDERLINE}${__BOLD}${__RED}${branch}${__RESET}(${state})"
  if [[ `git branch -r | grep -c "${__MAIN_REMOTE}/HEAD"` != 0 ]]; then 
    echo -n " ${__BOLD}${__WHITE}`git rev-list --left-right --count ${__MAIN_REMOTE}/HEAD...${__MAIN_REMOTE}/${branch} | awk '{print $1"|"$2}'`${__RESET}"
  elif [[ `git branch -r | grep -c "${__MAIN_REMOTE}/master"` != 0 ]]; then 
    echo -n " ${__BOLD}${__WHITE}`git rev-list --left-right --count ${__MAIN_REMOTE}/master...${__MAIN_REMOTE}/${branch} | awk '{print $1"|"$2}'`${__RESET}"
  fi
  echo -n " ( C:${__BOLD}${__WHITE}`git log --oneline \"${__MAIN_REMOTE}/${branch}\" | awk '{c+=1} END {print c}'`${__RESET}"
  echo -n " A:${__BOLD}${__WHITE}`git shortlog -s -n -e \"${__MAIN_REMOTE}/${branch}\" | awk '{c+=1} END {print c}'`${__RESET} )"
  echo "\n  last change: `git log --pretty=format:'%C(bold green)%s%C(reset) %C(blue)%cr%C(reset) by %C(yellow)%an%C(reset)' -1 \"${__MAIN_REMOTE}/${branch}\"`"
  echo "  last 7 days: `git shortlog -sn --after="$(date -v-8d +%F) 23:59:59" "${__MAIN_REMOTE}/${branch}" | awk "{c=\\$1};\\$1=\\"\\";{printf(\\"${__RED}%s${__RESET} (${__GREEN}%s${__RESET})\\",\\$0,c)}"`\n"
done

if git tag > /dev/null 2>/dev/null; then
  echo "\n${__BACKGROUND}Tags${__RESET}"
  git tag -n --sort=-creatordate | awk "{printf(\"  ${__RED}${__BOLD}${__UNDERLINE}%s${__RESET};;\",\$1)}; \$1=\"\"; {printf(\"${__BLUE}%s${__RESET}\n\",\$0)}" | column -s';;' -t
fi

unset __RESET __UNDERLINE __BOLD __MILD __BACKGROUND __RED __GREEN __YELLOW __BLUE __WHITE remote branch __MAIN_REMOTE state
